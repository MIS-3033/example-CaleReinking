<Window x:Class="CSV_Example.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSV_Example"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Height="420" Margin="0,0,-0.4,0" VerticalAlignment="Top">
        <Button x:Name="btnSelectFile" Content="Select" HorizontalAlignment="Left" Margin="588,89,0,0" VerticalAlignment="Top" Width="109" Height="22" Click="btnSelectFile_Click"/>
        <Button x:Name="btnProcess" Content="Process" HorizontalAlignment="Left" Margin="588,158,0,0" VerticalAlignment="Top" Width="109" Height="20" IsEnabled="False" Click="btnProcess_Click"/>
        <Label Content="Enter File Path>" HorizontalAlignment="Left" Margin="59,93,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtFilePath" HorizontalAlignment="Left" Height="23" Margin="180,97,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="307"/>
        <ListBox x:Name="lstLines" Height="169" Margin="10,241,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="774"/>

    </Grid>
</Window>
